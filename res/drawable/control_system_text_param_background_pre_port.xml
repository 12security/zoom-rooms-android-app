<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:top="@dimen/zrcs_text_param_access_fix_press" android:bottom="@dimen/zrcs_text_param_access_fix_press">
                <shape android:shape="rectangle">
                    <corners android:radius="8.0dip" />
                    <stroke android:width="2.0dip" android:color="@color/transparent" />
                    <solid android:color="@color/zrcs_gray_dark" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="false">
        <layer-list>
            <item android:left="@dimen/zrcs_param_size_change" android:top="@dimen/zrcs_text_param_access_fix" android:right="@dimen/zrcs_param_size_change" android:bottom="@dimen/zrcs_text_param_access_fix">
                <shape android:shape="rectangle">
                    <corners android:radius="8.0dip" />
                    <stroke android:width="2.0dip" android:color="@color/zrcs_blue_light_transparent" />
                    <solid android:color="@color/transparent" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>